<Alloy>
	<Window id="mapDrawingWin" class="childContainer">
		<Require id="topBar" src="partials/topbar"></Require>
		<View id="btnView">
			<Label id="lblConvexHull">Convex\nHull</Label>
			<Switch id="btnConvexHull" value="true" onChange="ConvexHull"/>
			<Button id="btnDraw" onClick="startDraw"></Button>
			<Button id="btnClear" onClick="clearRoute" ></Button>
		</View>
		<ScrollView id="svPoints">
			<Label id="lblRoute" />
		</ScrollView>
		<View id="mapViewContainer">
			<Require type="widget" src="com.n3wc.TiDrawableMap" id="DrawableMap"/>
		</View>
	</Window>
</Alloy>